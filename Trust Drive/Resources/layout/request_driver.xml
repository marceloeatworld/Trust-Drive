<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
	android:paddingBottom="10dp"
	android:paddingTop="10dp"
	android:background="@color/trustdriveWhite"
	android:minHeight="420dp"
	android:minWidth="300dp"
	>

	<RelativeLayout
		android:layout_height="0dp"
		android:layout_weight="0.3"
		android:layout_width="match_parent">

		<ProgressBar
			android:id="@+id/progressSpinner"
			android:layout_width="60dp"
			android:layout_height="60dp"
			android:indeterminate="true"
			android:indeterminateTintMode="src_atop"
			android:indeterminateTint="@color/trustdriveAccentColor"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"
		/>

		<TextView
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:gravity="center"
			android:textSize ="22sp"
			android:layout_marginTop="20dp"
			android:layout_below="@+id/progressSpinner"
			android:text="Trouver une trusty à proximité"
		/>

		</RelativeLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="0.5"
		>
		<ImageView
			android:layout_height="70dp"
			android:layout_width="70dp"
			android:src="@drawable/profilelogo"
			android:layout_gravity="center_horizontal"
			android:layout_margin="20dp"
		/>

		<TextView
			android:layout_height = "wrap_content"
			android:layout_width="match_parent"
			android:text="Estimation de la course"
			android:gravity="center"
			/>

		<TextView
		android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/faresText"
			android:gravity="center"
			android:text="200 €"
			android:textStyle="bold"
			android:textSize="20sp"
			android:layout_marginTop="5dp"
			
		/>
	
	</LinearLayout>

	<RelativeLayout
		android:layout_height="0dp"
		android:layout_width="match_parent"
		android:layout_weight="0.2">

		<Button
			android:id="@+id/cancelrequestButton"
			android:layout_height="45dp"
			android:layout_width="match_parent"
			android:textAllCaps="false"
			android:background="@drawable/trustdriverounded"
			android:text="Annuler"
			android:textColor="@color/trustdriveWhite"
		/>
		
	</RelativeLayout>

</LinearLayout>
